{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "noImplicitAny": true,
    "strict": false,
    "module": "es6",
    "target": "es2021",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["./src/index.ts"]
}
